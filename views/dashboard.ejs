<html>
    <head>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
        <link href="/css/style.css" rel="stylesheet" type="text/css">
    </head>
<body style="overflow: auto;">
    <a href="/users/logout" class = "logout">Logout</a>
    <a href="/users/portfolio/<%= user._id.toString() %>" class="preview" target="_blank">Preview</a>
    <div class="sidenav">
      <p class="name"><%= user.name %></p>
      <ul class="social_list">
          <% if (user.linkedin.length > 0) { %>
              <a href="<%= user.linkedin %>" target="_blank"><img src="/images/linkedin.png" class="icon"></a>
          <% } %> 
      <% if (user.github.length > 0) { %>
          <a href="<%= user.github %>" target="_blank"><img src="/images/github.png" class="icon"></a>
      <% } %> 
      <% if (user.medium.length > 0) { %>
          <a href="<%= user.medium %>" target="_blank"><img src="/images/medium.png" class="icon"></a>
      <% } %> 
      <% if (user.personal_web.length > 0) { %>
          <a href="<%= user.personal_web %>" target="_blank"><img src="/images/personal.png" class="icon"></a>
      <% } %> 
      </ul>
      <!-- <a href="#about">About</a>
      <a href="#services">Services</a>
      <a href="#clients">Clients</a>
      <a href="#contact">Contact</a> -->
    </div>
  <% for (var i = 0; i < projects.length; i++) { %>
      <div class="fullcontainer">
  <a href="<%= projects[i].project_url %>" target="_blank">
              <img src="<%= projects[i].url %>" alt="image" class="project_image">
          </a>
          <div class="project_text">
              <p class="project_name"><%= projects[i].project_name %></p>
              <p class="project_desc"><%= projects[i].project_desc %></p>
          </div>
      </div> <br><br>
  <% } %>

    <!-- Trigger the modal with a button -->
    <div class="add">
        <button type="button" class="btn-info btn-lg plus" data-toggle="modal" data-target="#myModal"><div>+</div></button>    
    </div> <br><br><br><br>

    <!-- Modal -->
    <div id="myModal" class="modal fade" role="dialog">
     <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Add Project</h4>
      </div>
      <div class="modal-body">
        <form class="input-group" action="/users/dashboard" method="POST" id="project">
            <div>
              <label for="url">Img URL</label>
              <input
                class="input-field"
                name="url"
                placeholder="Insert image link"
                value="<%= typeof url != 'undefined' ? url : '' %>"
              />
          </div>
          <div>
            <label for="project_url">Project URL</label>
            <input
              class="input-field"
              name="project_url"
              placeholder="Insert image link"
              value="<%= typeof project_url != 'undefined' ? project_url : '' %>"
            />
        </div>
          <div>
              <label for="project_name">Project Name</label>
              <input
                class="input-field"
                name="project_name"
                placeholder="Enter the name of your project"
                value="<%= typeof project_name != 'undefined' ? project_name : '' %>"
                maxlength="35"
              />
            </div>
            <label for="project_desc">Project Description</label>
            <textarea rows="4" cols="50" name="project_desc" form="project" maxlength="500"></textarea>
            <textarea style="display:none" rows="4" cols="50" name="user_id" form="project"><%= user._id.toString() %></textarea>
            <br>    
          </br>
            <button type="submit" class="btn btn-primary btn-block submit-btn">
              Submit
            </button>
          </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>
</body>
</html>